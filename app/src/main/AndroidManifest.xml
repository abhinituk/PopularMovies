<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunshine.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <permission android:name="com.sunshine.popularmovies.LICENSE_TO_KILL"
        android:protectionLevel="dangerous"
        android:label="Licensed to Kill"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:largeHeap="true">
        <activity android:name=".activity.MainActivity"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DetailActivity"
            android:label="@string/detail_activity_label"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/DetailAppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity android:name=".activity.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>
        <provider
            android:authorities="com.sunshine.popularmovies"
            android:name=".data.MovieProvider"
            android:enabled="true"
            android:exported="true"
            android:permission="com.sunshine.popularmovies.LICENSE_TO_KILL">
        </provider>

    </application>



</manifest>